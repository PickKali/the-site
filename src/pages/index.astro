---
import Layout from "../layouts/Layout.astro";

import { Image } from "astro:assets";
import kalitrying from "../assets/index/kali-trying.png";
---

<Layout title="PickKali's silly corner" description="Tap here for +1 Silly">
  <section id="Main" class="section">
    <div class="centered">
      <Image
        id="tryingimage"
        src={kalitrying}
        alt="Drawing of Kali sitting down with headphones, looking at her laptop."
        height={450}
        width={450}
        title="Oh, there's a cursor on me. Hi cursor! ^w^"
        layout="constrained"
        draggable=false
      />
    </div>
    <div class="halftone slantR card">
      <div class="centered">
        <h1>
          Kali, <select>
            <option>No Title Selected</option>
          </select>
        </h1>
        <i id="flavortext">No title? Guess I'm just Kali then!</i>
        <br /><br />
        <div id="options" class="allcentered">
          <a href="#Projects" class="button salmon card slantL">Projects▼</a>
          <a href="#Posts" class="button lime card slantL">Posts▼</a>
          <a href="#Music" class="button yellow card slantL">Music▼</a>
          <a href="#Glossary" class="button purple card slantL">Glossary▼</a>
        </div>
      </div>
    </div>
  </section>
  <section id="Projects" class="section">
    <div class="halftone slantL card maximize centered">
      <h1>Projects</h1>
    </div>
  </section>
  <section id="Posts" class="section">
    <div class="halftone slantR card maximize centered">
      <h1>Posts</h1>
    </div>
  </section>
  <section id="Music" class="section">
    <div class="halftone slantL card maximize centered">
      <h1>Music</h1>
    </div>
  </section>
  <section id="Glossary" class="section">
    <div class="halftone slantR card maximize centered">
      <h1>Glossary</h1>
    </div>
  </section>
  <style>
    #tryingimage {
      cursor: grab;
      filter: drop-shadow(-16px 16px var(--Dark));
    }
    #tryingimage:active {
      cursor: grabbing;
    }
    #options {
      max-width: 35vw;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
    }
  </style>
</Layout>
